---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import "../styles/header.css";
---

<header>
  <nav>
    <div class="logo">
      <a href="/">{SITE_TITLE}</a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>

<style>
  :root {
    --base: #1e1e2e;
    --surface0: #313244;
    --text: #cdd6f4;
    --lavender: #b4befe;
  }

  header {
    position: sticky;
    top: 0;
    z-index: 100;
    margin: 0;
    padding: 0 1em;
    /* Glassmorphism Effect */
    background: rgba(30, 30, 46, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--surface0);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 960px;
    margin: 0 auto;
    height: 70px;
  }

  .logo a {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--lavender);
    text-decoration: none;
    letter-spacing: -1px;
  }

  .internal-links {
    display: flex;
    gap: 1.5rem;
  }

  /* Menghilangkan garis bawah template Astro dan menggantinya dengan style baru */
  .internal-links a {
    padding: 0.5rem 0;
    color: var(--text);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .internal-links a:hover {
    color: var(--lavender);
  }

  /* Efek garis bawah halus saat hover */
  .internal-links a::after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--lavender);
    transition: width 0.3s ease;
  }

  .internal-links a:hover::after {
    width: 100%;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    color: var(--text);
    transition:
      transform 0.3s ease,
      color 0.3s ease;
    display: flex;
    align-items: center;
  }
</style>
